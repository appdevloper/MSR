<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_update_complaint"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp">
            <LinearLayout
                android:id="@+id/titel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.digitalrupay.msrc.customviews.CustomTextView
                    style="@style/CenturyGothic_regular_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Complaint"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="5dp">
                    <com.digitalrupay.msrc.customviews.CustomTextView
                        style="@style/CenturyGothic_regular_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/in_empname"
                        android:textSize="16dp"
                        android:textColor="@color/green"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"/>
                <com.digitalrupay.msrc.customviews.CustomTextView
                    style="@style/CenturyGothic_regular_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:text="Poor Signal"
                    android:id="@+id/complaint_stats"
                    android:textColor="@color/green"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"/>
                <Spinner
                    android:id="@+id/sp_pending_complaints"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"/>
                <LinearLayout
                    android:id="@+id/section_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <com.digitalrupay.msrc.customviews.CustomTextView
                            style="@style/CenturyGothic_regular_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="@string/used_inventory"/>
                        <CheckBox
                            android:id="@+id/check_used_inventory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/view_background"/>
                    <RelativeLayout
                        android:id="@+id/sub_section_inventory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Spinner
                                android:id="@+id/select_inventory"
                                android:layout_width="180dp"
                                android:layout_height="match_parent"/>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp">
                                <EditText
                                    android:id="@+id/used_qty"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Used Qty"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/green"
                                    android:inputType="number"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"/>
                <Spinner
                    android:id="@+id/sp_closed_complaints"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"/>
                <LinearLayout
                    android:id="@+id/Add_complaints_definition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <com.digitalrupay.msrc.customviews.CustomTextView
                        style="@style/CenturyGothic_regular_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="@string/complaints_Remarks"/>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">
                        <EditText
                            android:id="@+id/Add_complaints"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Complaints Remarks .."
                            android:imeOptions="actionNext"
                            android:textColor="@color/green"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="@string/Capture_Image"
                        android:onClick="captureImage"
                        android:textColor="@color/white"
                        android:theme="@style/AppTheme.Button"/>
                    <ImageView
                        android:id="@+id/Imageprev"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"/>
                <LinearLayout
                    android:id="@+id/sub1_section_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Spinner
                            android:id="@+id/select_inventory1"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"/>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp">
                            <EditText
                                android:id="@+id/used_qty1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Used Qty"
                                android:imeOptions="actionNext"
                                android:textColor="@color/green"
                                android:inputType="number"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="@string/Capture_Image"
                            android:onClick="captureImage1"
                            android:textColor="@color/white"
                            android:theme="@style/AppTheme.Button"/>
                        <ImageView
                            android:id="@+id/Imageprev1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"/>
                        <Button
                            android:id="@+id/delete1"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:textSize="10dp"
                            android:text="Delete"
                            android:textColor="@color/colorAccent"
                            android:theme="@style/AppTheme.Button"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_background"/>
                <LinearLayout
                    android:id="@+id/sub2_section_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Spinner
                            android:id="@+id/select_inventory2"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"/>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp">
                            <EditText
                                android:id="@+id/used_qty2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Used Qty"
                                android:imeOptions="actionNext"
                                android:textColor="@color/green"
                                android:inputType="number"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="@string/Capture_Image"
                            android:onClick="captureImage2"
                            android:textColor="@color/white"
                            android:theme="@style/AppTheme.Button"/>
                        <ImageView
                            android:id="@+id/Imageprev2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"/>
                        <Button
                            android:id="@+id/delete2"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:textSize="10dp"
                            android:text="Delete"
                            android:textColor="@color/colorAccent"
                            android:theme="@style/AppTheme.Button"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/tvPaymentName"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_marginTop="10dp"
                android:theme="@style/AppTheme.Button"
                android:layout_below="@id/titel"
                android:layout_centerHorizontal="true"
                android:onClick="submit"/>
        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="10dp"
        app:backgroundTint="@color/fabcolor"
        android:src="@drawable/add" />
    <include layout="@layout/sign_out"/>
</FrameLayout>
